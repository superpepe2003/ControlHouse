@model IEnumerable<ControlHouse.Models.CategoriaModel>

@{
    ViewBag.Title = "Categorias";
}

<h2 style="text-align:center">Categorias</h2>

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="background-color:orange">
                    <button type="button" class="close btn btn-info" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title" style="text-align:center">@ViewBag.Title</h3>
                </div>
                <div class="modal-body">
                    <div id="modal-content">
                        Cargando.....
                    </div>
                </div>
            </div>

        </div>
    </div>

    <p>
        <a class="btn btn-success" href="#myModal" id="btnNuevo" data-toggle="modal">Crear Nuevo</a>
        @*@Html.ActionLink("Crear Nueva", "Create",null, new { @class = "btn btn-success" })*@
        @Html.ActionLink("Sub Categorias", "Index", "SubCategoria", null, new { @class = "btn btn-info btn-sm", style = "float:right" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DropDown((List<DropDownLists>)ViewBag.Menu,"Acciones",item.Id, "myModal")
                    @*@Html.DropDown((List<DropDownLists>)ViewBag.Menu, "Acciones", item.Id)*@
                    @*<div class="dropdown">
                            <button class="btn btn-secondary btn-sm dropdown-toggle" id="menu1" type="button" data-toggle="dropdown">
                                Acciones
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Detalle", "Details", new { id = item.Id }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Sub Categoria", "Index", "SubCategoria", new { id = item.Id }, new { @class = "dropdown-item" })
                            </div>

                        </div>*@
                </td>
            </tr>
        }

    </table>

@section scripts {
    @Scripts.Render("~/bundles/Categoriasjs")
}